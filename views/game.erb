      </form>
      <script>
      document.addEventListener("keyup", function(event) {
          event.preventDefault();
          if (event.keyCode === 103) {
              document.getElementById("a1p1").click();
          }
          if (event.keyCode === 104) {
            document.getElementById("b1p").click();
          }
          if (event.keyCode === 105) {
            document.getElementById("c1p").click();
          }
          if (event.keyCode === 100) {
            document.getElementById("a2p").click();
          }
          if (event.keyCode === 101) {
            document.getElementById("b2p").click();
          }
          if (event.keyCode === 102) {
            document.getElementById("c2p").click();
          }
          if (event.keyCode === 97) {
            document.getElementById("a3p").click();
          }
          if (event.keyCode === 98) {
            document.getElementById("b3p").click();
          }
          if (event.keyCode === 99) {
