                <% else %>
                  <input type="submit" name="grid_position" id="b1p" value="B1" style="color: red; width:100%;height:100%;background-color: red"> <%= @game.grid['b1'] %> </td>
                <% end %>
            <td id='c1'><input type="hidden" name="c1" value ="<%= @game.grid['c1'] %>" >
